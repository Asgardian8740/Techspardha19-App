<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/third_gradient">

    <ImageView
        android:layout_marginTop="70dp"
        android:id="@+id/third_intro_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:paddingHorizontal="30dp"
        android:src="@drawable/thirdimage"/>

    <TextView
        android:layout_below="@id/third_intro_image"
        android:id="@+id/third_intro_text1"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EVENTS"
        android:fontFamily="@font/gillsans"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="70sp"/>
    <TextView
        android:textColor="#fff"
        android:layout_below="@id/third_intro_text1"
        android:id="@+id/third_intro_text2"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/gillsans"
        android:layout_height="wrap_content"
        android:text="Where great things happens."/>


</RelativeLayout>